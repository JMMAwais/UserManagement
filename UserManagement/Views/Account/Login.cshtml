@model UserManagement.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "LoginView";
}

<h2>Sign In</h2>
<br />
<br />
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <form id="account" method="post" asp-action="Login" asp-controller="Account">
                <h4>Use your registered email id and password to login</h4>
                <hr />
            @*     <div asp-validation-summary="All" class="text-danger"></div> *@
                <div class="form-group">
                    <label class="col-md-2" asp-for="Email"></label>
                    <div class="col-md-8">
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2" asp-for="Password"></label>
                    <div class="col-md-8">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="form-group Pt-4">
                    <div class="col-md-10  checkbox">
                   @*      <label asp-for="RememberMe" class="pr-4 pl-0"></label> *@
                        <input asp-for="RememberMe"/>
                        Remember me?
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 ">
                        <input type="submit" value="Login" class="btn btn-success" />
                    </div>
                </div>

                <p class="col-md-10 pt-2">
                      <a asp-action="Register">Sign Up</a>
                </p>

                <p class="col-md-10 pt-2">
                    <a asp-action="ForgotPassword">Forgot Password</a>
                </p>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}


